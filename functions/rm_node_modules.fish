function rm_node_modules --description "Recursively delete node_modules folders"
    # Print executed commands
    set -l fish_trace 1

    # Split into two steps so that `node_modules` nested within the top level
    # `node_modules` arenâ€™t captured into that second glob
    rm -rf node_modules/;
        and rm -rf ./**/node_modules/
end
